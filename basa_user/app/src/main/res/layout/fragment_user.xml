<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.mybasaclient.ui.UserFragment"
    android:background="@color/background_floating_material_dark"
    >


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:id="@+id/header"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/action_goToHome">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageButton"
            android:background="@null"
            android:src="@drawable/ic_arrow_down"
            android:rotation="180"
            android:tint="@android:color/background_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BASA"
            android:id="@+id/textView5"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton"
            android:textColor="@android:color/background_light"
            android:textSize="22dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/action_add_zone"
        android:layout_alignParentRight="true"
        android:tint="@android:color/background_light"
        android:src="@drawable/ic_add" />

</RelativeLayout>


    <android.support.percent.PercentRelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <!--<RelativeLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:id="@+id/relativeLayout"-->
                <!--android:layout_marginTop="?attr/actionBarSize"-->
                <!--android:layout_marginBottom="35dp">-->


                <TextView
                    android:id="@+id/user_photo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circle"
                    android:text="JS"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="70dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_centerHorizontal="true" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="joao"
                    android:id="@+id/textUsername"
                    android:layout_below="@+id/user_photo"
                    android:layout_centerHorizontal="true"
                    style="@style/NormalText"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="joao@email.com"
                    android:id="@+id/textEmail"
                    android:textSize="15sp"
                    android:layout_below="@+id/textUsername"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textEmail"
                    android:layout_above="@+id/zone2"
                    android:weightSum="3"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <ImageView
                            style="@style/UserButton"
                            android:id="@+id/imageView4"
                            android:src="@drawable/ic_comment"
                            android:padding="12dp"
                            android:background="@drawable/circle_blue" />

                        <TextView
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Messages"
                            android:id="@+id/textView12"
                            android:layout_below="@+id/imageView4"
                            android:gravity="center"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            style="@style/UserButton"
                            android:id="@+id/user_account"
                            android:src="@drawable/ic_settings"
                            android:background="@drawable/circle_grey"
                            android:padding="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account"
                            android:id="@+id/textView8"
                            android:layout_below="@+id/user_account"
                            style="@style/NormalText"
                            android:gravity="center"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            style="@style/UserButton"
                            android:id="@+id/user_info"
                            android:src="@drawable/ic_info"
                             />

                        <TextView
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Info"
                            android:id="@+id/textView11"
                            android:layout_below="@+id/user_info"
                            android:gravity="center"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>


                </LinearLayout>


            <!--</RelativeLayout>-->



        <View
            android:layout_width="match_parent"
            app:layout_heightPercent="70%"
            android:layout_height="0dp"

            android:id="@+id/placeholder" />

        <include layout="@layout/layout_zone"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:background="@android:color/holo_green_dark"
            app:layout_heightPercent="15%"
            android:layout_below="@+id/placeholder"
            android:id="@+id/zone2"></include>
        <include layout="@layout/layout_zone"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:background="@android:color/holo_green_dark"
            app:layout_heightPercent="15%"
            android:layout_below="@+id/zone2"
            android:id="@+id/zone1"></include>

    </android.support.percent.PercentRelativeLayout>




