<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_main">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/header"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/action_goToUser">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageButton"
                android:background="@null"
                android:src="@drawable/ic_arrow_down"
                android:tint="@android:color/background_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BASA"
                android:id="@+id/textView5"
                android:layout_toRightOf="@+id/imageButton"
                android:layout_toEndOf="@+id/imageButton"
                android:textColor="@android:color/background_light"
                android:textSize="22dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settings"
            android:layout_alignParentRight="true"
            android:tint="@android:color/background_light"
            android:src="@drawable/ic_settings" />

    </RelativeLayout>


    <include layout="@layout/layout_zone"
        app:layout_heightPercent="13%"
        app:layout_widthPercent="100%"
        android:id="@+id/header2"
        ></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_icon3"
        android:id="@+id/homeOrAwayBg"
        android:orientation="horizontal">

    </LinearLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/homeOrAwayLayout1"
        app:layout_marginTopPercent="13%"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Zone available"
            android:id="@+id/textViewTitle"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:clickable="false" />

        <ImageView
            app:layout_widthPercent="30%"
            app:layout_aspectRatio="100%"
            android:id="@+id/imageLocationSelected"
            android:src="@drawable/ic_home_circle"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewTitle"
            android:background="@drawable/home_bg_inner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/textViewSelected"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_below="@+id/imageLocationSelected"
            android:textColor="@color/white"
            android:clickable="false"
            android:textStyle="bold" />

    </android.support.percent.PercentRelativeLayout>


    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/homeOrAwayLayout2"
        android:layout_below="@+id/homeOrAwayLayout1"
        android:layout_marginBottom="15dp">


        <ImageView
            app:layout_widthPercent="30%"
            app:layout_aspectRatio="100%"
            android:id="@+id/imageLocationChoice"
            android:src="@drawable/ic_home_circle_away"
            android:layout_centerHorizontal="true"
            android:background="@drawable/home_bg_inner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Away"
            android:id="@+id/textViewChoice"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_below="@+id/imageLocationChoice"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </android.support.percent.PercentRelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/homeOrAwayLayout1"
        android:stretchMode="spacingWidthUniform"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


