<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="pt.ulisboa.tecnico.mybasaclient.ui.UserFragment">

    <include layout="@layout/layout_toolbar" android:id="@+id/toolbar_layout"></include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_layout"
        android:background="@color/material_grey_100"
        android:divider="?android:attr/listDivider"
        android:showDividers="middle|beginning|end">


        <RelativeLayout
            style="@style/ListItemBASA"
            android:id="@+id/changeDeviceIP">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device IP"
                android:id="@+id/textView10"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                style="@style/SettingsText" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="192.168.1.1"
                android:id="@+id/textViewIP"
                android:layout_centerVertical="true"
                style="@style/SettingsText"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/primary_dark_material_light" />
        </RelativeLayout>




        <RelativeLayout
            style="@style/ListItemBASA"
            android:layout_marginTop="50dp"
            android:divider="?android:attr/listDivider"
            android:showDividers="beginning"
            android:id="@+id/remove_device">



            <TextView
                style="@style/SettingsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:id="@+id/textViewRemove"
                android:layout_alignParentTop="false"
                android:layout_centerInParent="true"
                android:textColor="@color/design_textinput_error_color_light" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
