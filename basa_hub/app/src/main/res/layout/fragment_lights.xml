<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_switch_bg"
        android:id="@+id/custom_switches"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/light_switches"
        android:layout_marginLeft="15dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/containerCustomSwitch"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/relativeLayout6"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp" >

                <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="209dp"
                    android:id="@+id/imageButton3"
                    android:background="@drawable/btn_lights"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/relativeLayout6" >

                <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="209dp"
                    android:id="@+id/imageButton4"
                    android:background="@drawable/btn_lights"
                    android:layout_centerInParent="true" />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Switches"
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/containerCustomSwitch"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_switch_bg"
        android:id="@+id/light_switches">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/containerLightSwitch"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/relativeLayout"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp" >

                <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="209dp"
                    android:id="@+id/imageButton"
                    android:background="@drawable/btn_lights"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageButton"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="26dp"
                    android:src="@drawable/power_button_off" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/relativeLayout" >

                <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="209dp"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/btn_lights"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:layout_alignBottom="@+id/imageButton2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="26dp"
                    android:src="@drawable/power_button_off" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
